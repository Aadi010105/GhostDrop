{
  "name": "ghostdrop-backend",
  "version": "1.0.0",
  "description": "GhostDrop Backend - Secure, Ephemeral, Collaborative File Sharing Platform",
  "main": "src/server.js",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "env:test": "node test-env.js",
    "install:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "update:deps": "pnpm update --interactive"
  },
  "keywords": [
    "file-sharing",
    "ephemeral",
    "secure",
    "collaboration",
    "privacy"
  ],
  "author": "Aadi",
  "license": "MIT",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@prisma/client": "6.16.0",
    "aws-sdk": "^2.1490.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "socket.io": "^4.7.4",
    "svix": "^1.76.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.16.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "aws-sdk": "^2.1490.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18"
      }
    }
  }
}
